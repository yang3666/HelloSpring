<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
<!--    定义Bean-->
    <bean id="orderDao" class="com.jy.dao.impl.OrderDaoImpl"></bean>
<!--    定义切面-->
    <bean id="myOrderAspect" class="com.jy.MyOrderAspect"></bean>
    <aop:config>
        <aop:pointcut id="beforePointCut" expression="execution(* com.jy.dao.OrderDao.add(..))"/>
        <aop:pointcut id="throwPointCut" expression="execution(* com.jy.dao.OrderDao.get(..))"/>
        <aop:pointcut id="afterReturnPointCut" expression="execution(* com.jy.dao.OrderDao.modify(..))"/>
        <aop:pointcut id="afterPointCut" expression="execution(* com.jy.dao.OrderDao.*(..))"/>
        <aop:aspect ref="myOrderAspect">
<!--            前置增强-->
            <aop:before method="before" pointcut-ref="beforePointCut"></aop:before>
<!--            后置返回增强-->
            <aop:after-returning method="afterReturning" pointcut-ref="afterReturnPointCut" returning="returnValue"></aop:after-returning>
<!--            异常通知-->
            <aop:after-throwing method="afterThrow" pointcut-ref="throwPointCut" throwing="exception"></aop:after-throwing>
<!--            最终通知-->
            <aop:after method="after" pointcut-ref="afterPointCut"></aop:after>
<!--            环绕通知-->
            <aop:around method="around" pointcut-ref="beforePointCut"></aop:around>
        </aop:aspect>
    </aop:config>
</beans>